{
	"compilerOptions": {
			"module": "commonjs",
			"target": "ES2022",
			"outDir": "out",
			"lib": [
					"ES2022"
			],
			"sourceMap": true,
			"rootDir": "src",
			"strict": true,
			"esModuleInterop": true,
			"skipLibCheck": true,
			"typeRoots": [
					"node_modules/@types"
			],
			"types": ["node", "jest"]
	},
	"include": [
			"src/**/*"
	],
	"exclude": [
			"node_modules",
			".vscode-test"
	]
}
