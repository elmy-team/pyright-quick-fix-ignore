{
  "name": "pyright-quick-fix-ignore",
  "displayName": "Pyright Quick Fix Ignore",
  "description": "Enhances Pyright quick fixes by suggesting specific `# pyright: ignore[errorCode]` directives and detects unused ignores.",
  "version": "1.3.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "type": "commonjs",
  "contributes": {
    "languages": [
      {
        "id": "python",
        "aliases": [
          "Python",
          "python"
        ],
        "extensions": [
          ".py"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Pyright Quick Fix Ignore Configuration",
      "properties": {
        "pyrightQuickFixIgnore.warnOnUnusedIgnores": {
          "type": "boolean",
          "default": true,
          "description": "Enable warnings for unused Pyright and type ignore comments."
        },
        "pyrightQuickFixIgnore.unusedIgnoreSeverity": {
          "type": "string",
          "enum": [
            "Error",
            "Warning",
            "Information",
            "Hint"
          ],
          "default": "Warning",
          "description": "Set the severity level for diagnostics related to unused ignore comments."
        }
      }
    },
    "commands": [
      {
        "command": "pyright-ignore-extension.addIgnore",
        "title": "Add Pyright Ignore Comment"
      },
      {
        "command": "pyright-ignore-extension.removeUnusedIgnore",
        "title": "Remove Unused Ignore Comment"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "jest"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/jest": "^29.5.14",
    "@types/node": "^14.0.0",
    "chai": "^4.3.7",
    "jest": "^29.7.0",
    "jest-mock-vscode": "^4.0.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.0.0",
    "vscode": "^1.1.37",
    "vscode-test": "^1.6.1"
  }
}
